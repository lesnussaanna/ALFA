<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alumni.ui.UbahPasswordActivity">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="?attr/actionBarSize"
      android:theme="?attr/actionBarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:background="#266041">

    <ImageView
        android:id="@+id/btnBuatPengumuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="12dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/toolbartitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Ubah Password"
        android:textColor="#FFFFFF"
        android:textSize="26dp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="20dp" />


  </androidx.appcompat.widget.Toolbar>

  <TextView
      android:id="@+id/pengaturan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:drawablePadding="10dp"
      android:text="Password Lama"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteY="169dp" />

  <View
      android:id="@+id/view"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="30dp"
      android:background="@color/black"
      app:layout_constraintEnd_toEndOf="@+id/pengaturan"
      app:layout_constraintHorizontal_bias="0.08"
      app:layout_constraintStart_toStartOf="@+id/pengaturan"
      app:layout_constraintTop_toBottomOf="@id/pengaturan" />

  <TextView
      android:id="@+id/tentangPerusahaan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="32dp"
      android:drawablePadding="10dp"
      android:text="Password Baru"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view" />

  <View
      android:id="@+id/view2"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="36dp"
      android:layout_marginEnd="30dp"
      android:background="@color/black"
      app:layout_constraintEnd_toEndOf="@+id/tentangPerusahaan"
      app:layout_constraintHorizontal_bias="0.092"
      app:layout_constraintStart_toStartOf="@+id/tentangPerusahaan"
      app:layout_constraintTop_toBottomOf="@id/tentangPerusahaan" />

  <TextView
      android:id="@+id/pertanyaan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:drawablePadding="10dp"
      android:text="konfirmasi Password"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteY="356dp" />

  <View
      android:id="@+id/view3"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="30dp"
      android:background="@color/black"
      app:layout_constraintEnd_toEndOf="@+id/pertanyaan"
      app:layout_constraintHorizontal_bias="0.083"
      app:layout_constraintStart_toStartOf="@+id/pertanyaan"
      app:layout_constraintTop_toBottomOf="@id/pertanyaan" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Ubah Password"
      android:textSize="22dp"
      tools:layout_editor_absoluteX="28dp"
      tools:layout_editor_absoluteY="107dp" />

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView"
      android:layout_width="93dp"
      android:layout_height="40dp"
      app:cardBackgroundColor="@color/green_dark"
      app:cardCornerRadius="10dp"
      app:cardElevation="10dp"
      tools:layout_editor_absoluteX="159dp"
      tools:layout_editor_absoluteY="459dp">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="22dp" />
  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>