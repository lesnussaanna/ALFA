<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_01"
    tools:context=".alumni.PengaturanAlumni">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#266041"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:contentDescription="@string/ic_back"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/ic_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/pengaturan"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd_editprofil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:elevation="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/tv_editprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profil"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="40dp"
            android:textSize="20sp"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_edit_profil" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd_gantipassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:elevation="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/cd_editprofil">
        <TextView
            android:id="@+id/tv_gantipassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ganti_password"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="40dp"
            android:textSize="20sp"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_pengaturan"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd_aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:elevation="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/cd_gantipassword">
            <TextView
                android:id="@+id/tv_aboutus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tentang_kami"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="40dp"
                android:textSize="20sp"
                android:drawablePadding="10dp"
                app:drawableStartCompat="@drawable/ic_tentang"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd_keluar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:elevation="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/cd_aboutus">
        <TextView
            android:id="@+id/tv_keluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/keluar"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/secondary_01"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="40dp"
            android:textSize="20sp"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_logout"/>
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>